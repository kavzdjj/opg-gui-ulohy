<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.spse.uloha3.declarative.Controller">

    <padding>
        <Insets topRightBottomLeft="15"/>
    </padding>

    <!-- TOP -->
    <top>
        <Label text="Stredná priemyselná škola elektrotechnická, Prešov"
               style="-fx-font-size: 18px; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- LEFT -->
    <left>
        <ImageView fitWidth="180" preserveRatio="true">
            <image>
                <Image url="@spse.png"/>
            </image>
        </ImageView>
    </left>

    <!-- CENTER -->
    <center>
        <VBox spacing="10">
            <TextArea editable="false" wrapText="true">
                <text>
                    Vážení rodičia a milí žiaci základných škôl,

                    radi by sme Vás privítali v priestoroch našej školy
                    dňa 10. 02. 2026 (utorok) od 13.00 do 17.00 h na
                    Dni otvorených dverí, kde by sme Vám chceli
                    predstaviť naše študijné odbory.
                </text>
            </TextArea>

            <Hyperlink text="https://www.spse-po.sk"/>

            <Button text="Beriem na vedomie"
                    onAction="#zavriet"
                    alignment="CENTER_RIGHT"/>
        </VBox>
    </center>

</BorderPane>
